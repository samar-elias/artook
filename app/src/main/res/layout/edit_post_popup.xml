<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_35sdp"
    android:layout_marginEnd="@dimen/_35sdp"
    android:background="@drawable/white_10radius"
    android:padding="@dimen/_15sdp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/red_close"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:text="@string/edit_description"
        android:fontFamily="@font/gill_sans_semibold"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_layout"
        style="@style/DarkBlueTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColorHint="@color/darkest_blue"
        app:counterTextColor="@color/darkest_blue"
        app:helperTextTextColor="@color/darkest_blue"
        app:hintTextColor="@color/darkest_blue"
        app:boxStrokeColor="@color/darkest_blue"
        app:boxBackgroundColor="@color/light_gray_trans35"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
        app:boxCornerRadiusTopStart="@dimen/_8sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/gill_sans_regular"
            android:textColorHint="@color/darkest_blue"
            android:textColor="@color/darkest_blue"
            app:helperText="OutlinedBox helper helper"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:backgroundTint="@color/purple2"
        app:cornerRadius="@dimen/_17sdp"
        android:text="@string/save_changes"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:fontFamily="@font/gill_sans_semibold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/_13ssp"/>
</androidx.constraintlayout.widget.ConstraintLayout>