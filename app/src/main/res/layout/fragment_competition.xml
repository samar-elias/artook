<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    tools:context=".views.main.competition.CompetitionFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contest_NSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_70sdp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/vertical_logo"
                android:layout_marginTop="@dimen/_15sdp"/>

            <ImageView
                android:id="@+id/current_contest"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/current_contest"/>

            <ImageView
                android:id="@+id/first_winner_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/first_winner"
                app:layout_constraintTop_toTopOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"/>

            <TextView
                android:id="@+id/first_winner_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gill_sans_bold"
                android:textColor="@color/gold"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@id/first_winner_layout"
                app:layout_constraintEnd_toEndOf="@id/first_winner_layout"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="@id/first_winner_layout"
                app:layout_constraintTop_toTopOf="@id/first_winner_layout"
                app:layout_constraintVertical_bias="0.48"
                tools:text="500 JD" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="@id/first_winner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/first_winner_layout"
                app:layout_constraintVertical_bias="0.75"
                android:src="@drawable/first"/>

            <ImageView
                android:id="@+id/second_winner_layout"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/second_winner"
                app:layout_constraintBottom_toBottomOf="@id/first_winner_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/first_winner_layout"
                app:layout_constraintVertical_bias="0.61"
                android:layout_marginStart="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/second_winner_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gill_sans_bold"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/second_winner_layout"
                app:layout_constraintEnd_toEndOf="@id/second_winner_layout"
                app:layout_constraintStart_toStartOf="@id/second_winner_layout"
                app:layout_constraintTop_toTopOf="@id/second_winner_layout"
                tools:text="300 JD" />

            <ImageView
                android:id="@+id/sec"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@id/second_winner_layout"
                app:layout_constraintStart_toStartOf="@id/second_winner_layout"
                app:layout_constraintEnd_toEndOf="@id/second_winner_layout"
                android:src="@drawable/second"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/third_winner_layout"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/third_winner"
                app:layout_constraintBottom_toBottomOf="@id/first_winner_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/first_winner_layout"
                app:layout_constraintVertical_bias="0.61"
                android:layout_marginEnd="@dimen/_25sdp"/>

            <TextView
                android:id="@+id/third_winner_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gill_sans_bold"
                android:textColor="@color/purple2"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/third_winner_layout"
                app:layout_constraintEnd_toEndOf="@id/third_winner_layout"
                app:layout_constraintStart_toStartOf="@id/third_winner_layout"
                app:layout_constraintTop_toTopOf="@id/third_winner_layout"
                tools:text="300 JD" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@id/third_winner_layout"
                app:layout_constraintStart_toStartOf="@id/third_winner_layout"
                app:layout_constraintEnd_toEndOf="@id/third_winner_layout"
                android:src="@drawable/third"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contest_image_CV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                app:layout_constraintTop_toBottomOf="@id/sec"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/contest_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/contest_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/contest_image_CV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                tools:text="Youth Art Contest"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/gill_sans_semibold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/contest_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/contest_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industryâ€™s standard dummy text ever since the 1500s, when an unknown printer took a galley."
                android:textColor="@color/gray"
                android:fontFamily="@font/gill_sans_regular"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>

            <TextView
                android:id="@+id/remaining_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/contest_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/remaining_time"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gill_sans_semibold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/remaining_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/remaining_time_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_purple_gradient_background"
                    android:weightSum="4.3"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/days"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/gill_sans_regular"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="01"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/gill_sans_semibold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_3sdp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/gill_sans_semibold"
                        android:layout_gravity="center_vertical"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hours"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/gill_sans_regular"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="23"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/gill_sans_semibold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_3sdp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/gill_sans_semibold"
                        android:layout_gravity="center_vertical"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/minutes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/gill_sans_regular"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="43"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/gill_sans_semibold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_3sdp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/gill_sans_semibold"
                        android:layout_gravity="center_vertical"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seconds"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/gill_sans_regular"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16ssp"
                            android:fontFamily="@font/gill_sans_semibold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_3sdp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/remaining_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2.1">
                <TextView
                    android:id="@+id/details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_15_stroke"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/details"
                    android:gravity="center"
                    android:fontFamily="@font/gill_sans_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <TextView
                    android:id="@+id/vote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/purple_blue_gradient_background"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/vote"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/gill_sans_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:id="@+id/participate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/purple_blue_gradient_background"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/participate"
                    android:gravity="center"
                    android:fontFamily="@font/gill_sans_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/previous_contests_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/buttons_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/previous_contests"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/gill_sans_semibold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/previous_contests_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/previous_contests_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                tools:listitem="@layout/previous_contest_layout"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminateTint="@color/dark_purple"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>